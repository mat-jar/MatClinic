<%= render @patient %>

<div>
  <%= link_to "Edit this patient", edit_patient_path(@patient), class: "btn btn-secondary" %> |
  <%= link_to "Back to patients", patients_path, class: "btn btn-secondary" %>
  <div class="my-2">
    <%= button_to "Destroy this patient", @patient, method: :delete, data: { turbo: false, confirm: "Are you sure you want to delete this patient?" }, class: "btn btn-secondary" %>
  </div>
</div>
